<%= render 'shared/errors', obj: @user %>

<%= form_with(model: @user, data: { turbo: false }, local: true) do |f| %>
  <div class="container bg-secondary p-3 rounded shadow w-50">
    <div class="mb-3 row">
      <%= f.label :username, class: "col-sm-1 col-form-label text-light", for:"FormControlInput1" %>
      <div class="col-sm-11">
        <%= f.text_field :username, type: "text", class: "form-control shadow", id: "FormControlInput1", placeholder: "Enter a username" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :email, class: "col-sm-1 col-form-label text-light", for: "FormControlTextarea1" %>
      <div class="col-sm-11">
        <%= f.email_field :email, class: "form-control shadow", id: "FormControlTextarea1", placeholder: "Enter your email address" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :password, class: "col-sm-1 col-form-label text-light", for: "FormControlTextarea1" %>
      <div class="col-sm-11">
        <%= f.password_field :password, class: "form-control shadow", id: "FormControlTextarea1", placeholder: "Choose a password" %>
      </div>
    </div>
    <div class="form-group mb-3 row">
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class:"btn btn-large btn-outline-dark text-dark shadow col-4 fs-4 offset-4", id: "submit-button") %>
    </div>
  </div>
<% end %>
<div class="text-center my-3">
  <%= link_to '[ Cancel and return to homepage ]', root_path, class: "text-decoration-none", id: "return-to-listings" %>
</div>